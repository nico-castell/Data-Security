{
    "tasks": [
        // G++ Build ===================================================================================================
        {
            "type": "cppbuild",
            "label": "G++ - Compile Binary",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${workspaceFolder}/Binary/binary.cpp",
                "-o",
                "${workspaceFolder}/binme"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compile Binary project into debuggable executable.",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
