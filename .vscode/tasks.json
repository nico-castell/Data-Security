{
    "tasks": [
        {
// G++ Build ===========================================================================================================
            "type": "cppbuild",
            "label": "Build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compile current file into executable.",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "type": "cppbuild",
            "label": "Compile project",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${workspaceFolder}/Program.cpp",
                "${workspaceFolder}/modifiers.cpp",
                "${workspaceFolder}/key.cpp",
                "-o",
                "${workspaceFolder}/passcrypt"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compile current file into executable.",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "type": "cppbuild",
            "label": "Pre-Compile active file",
            "command": "/usr/bin/g++",
            "args": [
                "-c",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Pre-compile active file into object file.",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
// Make build ==========================================================================================================
        {
            "type": "cppbuild",
            "label": "Build Project",
            "command": "/usr/bin/make",
            "args": [
                "-f",
                "${workspaceFolder}/makefile"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Use makefile to build whole project",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "type": "cppbuild",
            "label": "Clean project",
            "command": "/usr/bin/make",
            "args": [ "clean", "-s" ],
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Use makefile to clean the project",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ],
    "version": "2.0.0"
}
